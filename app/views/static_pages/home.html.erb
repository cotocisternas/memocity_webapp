<% provide(:title, "Memocity") %>
<% if logged_in? %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="micropost_form">
      <%= render 'shared/reminder_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>
      <b>Cola de recordatorios</b>
    </h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
<div class="center jumbotron">
  <%= link_to image_tag("logo.png", alt: "Memocity logo"), 'http://www.memocity.cl' %>
  <br>
  <%= link_to "Registrar", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
